{
  "name": "sys-top",
  "productName": "SysTop",
  "version": "1.0.0",
  "description": "Monitor your system CPU ",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "package-win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=false --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"APP NAME\"",
    "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/icons/icon.png --prune=false --out=release-builds"
  },
  "author": "Nikita Volkov",
  "license": "ISC",
  "devDependencies": {
    "electron": "^11.1.1",
    "electron-packager": "^15.2.0",
    "nodemon": "^2.0.6"
  },
  "dependencies": {
    "node-os-utils": "^1.3.2"
  }
}
